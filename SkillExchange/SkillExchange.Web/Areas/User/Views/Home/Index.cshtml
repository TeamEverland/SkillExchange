@using SkillExchange.Web.Areas.User.Models
@model SkillExchange.Web.Areas.User.Models.HomeIndexPageViewModel

@if (TempData["message"] != null)
{
    var message = (NotificationMessage)TempData["message"];
    if (message.Type == NotificationMessageType.Success)
    {
        <div class="alert alert-dismissible alert-success">
            <button type="button" class="close" data-dismiss="alert">×</button>
            @message.Content
        </div>
    }

    if (message.Type == NotificationMessageType.Error)
    {
        <div class="alert alert-dismissible alert-danger">
            <button type="button" class="close" data-dismiss="alert">×</button>
            @message.Content
        </div>
    }
}

<div class="col-lg-2 no-padding">
    <aside class="col-lg-12">
        @Html.Action(
        "Categories",
        new { categoryId = Model.SelectedCategoryId, townId = Model.SelectedTownId })
    </aside>
    <aside class="col-lg-12">
        @Html.Action("Towns")
    </aside>
</div>
<section class="col-lg-8 col-lg-offset-1">
    <div class="page-header text-center no-top-margin">
        <h2 class="text-primary no-top-margin">Most active users</h2>
    </div>
    @foreach (var user in Model.Users)
    {
        <div class="col-lg-4">@Html.DisplayFor(u => user)</div>
    }
</section>

