@model SkillExchange.Web.Areas.User.Models.ProfileModel

<main class="col-lg-8 col-lg-offset-2">
    <div class="page-header">
        <h3 class="text-center text-warning">@Model.FirstName @Model.LastName's profile</h3>
    </div>
    <div>
        <div class="panel panel-info col-lg-6 col-lg-offset-3 no-padding">
            <div class="panel-heading">
                <h3 class="panel-title">Personal info</h3>
            </div>
            <div class="panel-body">
                <div><span class="text-primary">Username </span>@Model.Username</div>
                <div><span class="text-primary">Town </span>@Model.Town</div>
            </div>
        </div>
        <div class="panel panel-info col-lg-6 col-lg-offset-3 no-padding">
            <div class="panel-heading">
                <h3 class="panel-title">Contact info</h3>
            </div>
            <div class="panel-body">
                <div><span class="text-primary">Email </span>@Model.Email</div>
            </div>
        </div>
        <div class="panel panel-info col-lg-6 col-lg-offset-3 no-padding">
            <div class="panel-heading">
                <h3 class="panel-title">Description</h3>
            </div>
            <div class="panel-body">
                @if (Model.Description != null)
                {
                    @Model.Description
                }
                else
                {
                    <span>No description yet</span>
                }
            </div>
        </div>
    </div>
</main>

