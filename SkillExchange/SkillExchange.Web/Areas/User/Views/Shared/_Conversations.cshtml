@model IEnumerable<SkillExchange.Web.Areas.User.Models.ConversationSummaryViewModel>
           
@if (Model.Any())
{
    <div class="well">
        <div>
            <p class="text-warning text-center">Conversations</p>
        </div>
        <div class="list-group" id="conversations">
            @foreach (var conversation in Model)
            {
                @Html.DisplayFor(m => conversation)
            }
        </div>
    </div>
}        
else
{
    <div class="well">
        <p class="text-primary text-center">No conversations yet</p>
    </div>
}

