@model SkillExchange.Web.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";
}

<div class="text-center col-lg-6 col-lg-offset-3">
    @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        @Html.AntiForgeryToken()
        <fieldset>
            <legend>Create a new account</legend>
            <p class="text-danger">@Html.ValidationMessageFor(m => m.FirstName)</p>
            <div class="form-group">
                @Html.LabelFor(m => m.FirstName, new { @class = "col-md-4 control-label" })
                <div class="col-md-8">
                    @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control" })
                </div>
            </div>
            <p class="text-danger">@Html.ValidationMessageFor(m => m.LastName)</p>
            <div class="form-group">
                @Html.LabelFor(m => m.LastName, new { @class = "col-md-4 control-label" })
                <div class="col-md-8">
                    @Html.TextBoxFor(m => m.LastName, new { @class = "form-control" })
                </div>
            </div>
            <p class="text-danger">@Html.ValidationMessageFor(m => m.Username)</p>
            <div class="form-group">
                @Html.LabelFor(m => m.Username, new { @class = "col-md-4 control-label" })
                <div class="col-md-8">
                    @Html.TextBoxFor(m => m.Username, new { @class = "form-control"})
                </div>
            </div>
            <p class="text-danger">@Html.ValidationMessageFor(m => m.Email)</p>
            <div class="form-group">
                @Html.LabelFor(m => m.Email, new { @class = "col-md-4 control-label" })
                <div class="col-md-8">
                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                </div>
            </div>
            <p class="text-danger">@Html.ValidationMessageFor(m => m.Password)</p>
            <div class="form-group">
                @Html.LabelFor(m => m.Password, new { @class = "col-md-4 control-label" })
                <div class="col-md-8">
                    @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                </div>
            </div>
            <p class="text-danger">@Html.ValidationMessageFor(m => m.ConfirmPassword)</p>
            <div class="form-group">
                @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-4 control-label" })
                <div class="col-md-8">
                    @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
                </div>
            </div>
            <p class="text-danger">@Html.ValidationMessageFor(m => m.Town)</p>
            <div class="form-group">
                @Html.LabelFor(m => m.Town, new { @for = "towns", @class = "col-lg-4 control-label" })
                <div class="col-md-8">
                    @Html.DropDownListFor(
                            m => m.TownId,
              new SelectList(Enumerable.Empty<SelectListItem>(), "Id", "Name", 1),
                            new { id = "towns", @class = "form-control" })

                    @*<select class="form-control" id="towns" name="TownId"></select>*@
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" class="btn btn-default" value="Register" />
                </div>
            </div>
        </fieldset>
    }
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/Scripts/custom/insert-towns-register.js")
}